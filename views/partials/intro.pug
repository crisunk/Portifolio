section#page_wrapper.screen
.intro_content
	.intro
		.intro_wrapper
			.intro_line_01
				.mover
					.mover_clip
						each item in home[0].data.role
							.text__role(class=`home__gallery__media--${index % 5 + 1}`)=item.designer

				.text_title
					each item in home[0].data.intro
						span.text=item.line_01

		.intro_line_02
			each item in home[0].data.intro
				span.line_02=item.line_02

		button.button_box
			.button__text__wrapper(href="#project")
					span.button_text=home[0].data.button
			svg.icon

