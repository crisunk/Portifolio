section.project

	each projectItem, index in project
		.project__container(class=`id__${index + 1}`)

			.project__wrapper

				.project__box
					span.text_tittle=projectItem.data.name

					.project__discription_type
						span.project-type=projectItem.data.type

					.project__text__description
						span.text_discription=projectItem.data.description

					.project__wrapper__tbn
						a.project__button__arrow( href='/projects/' + projectItem.uid)
							span.project__button_text See more

				.project__img__background__wrapper
					figure.project__background
						img.project__background__image(src=projectItem.data.cover.url alt=projectItem.data.cover.alt)


